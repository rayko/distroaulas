%h1 Index

= render :partial => 'datetime_event_filter'
= render :partial => 'free_spaces', :locals => {:spaces => @free_spaces}

%br

%div#weekly-view
  %div.weekly-header
    = weekly_calendar([], :date => @datetime, :include_24_hours => false, :only_header => true) do |w|
      = w.week(:business_hours => params[:business_hours], :clickable_hours => true) do |event,truncate|
        =  link_to event.name, event_path(event.id)

  %div.weekly-clean
    - Space.all.each do |space|
      = weekly_calendar(space.rical_occurrences(:before => @datetime.end_of_day, :after => @datetime.beginning_of_day), :date => @datetime, :include_24_hours => false, :row_title => space.name) do |w|
        = w.week(:business_hours => params[:business_hours], :clickable_hours => true) do |event,truncate|
          =  link_to event.name, event_path(event.id)

