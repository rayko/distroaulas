- title t('.title')

%ul
  %li
    %strong= Space.human_attribute_name(:name) + ':'
    = @space.name
  %li
    %strong= Space.human_attribute_name(:short_name) + ':'
    = @space.short_name
  %li
    %strong= Space.human_attribute_name(:description) + ':'
    = @space.description
  %li
    %strong= Space.human_attribute_name(:capacity) + ':'
    = @space.capacity
  %li
    %strong= Space.human_attribute_name(:space_type) + ':'
    = @space.space_type.name
  %li
    %strong= t('.events_count') + ':'
    = @space.events.size
%br
%p
  %strong= t('.weekly_view')
  %div.space_calendar
    %div.space_calendar_links
      = link_to t('.links.previous_week'), :date => (@date - 7.days).strftime("%d-%m-%Y")
      \|
      = link_to t('.links.current_week'), :date => Date.today
      \|
      = link_to t('.links.next_week'), :date => (@date + 7.days).strftime("%d-%m-%Y")
    %div#weekly-view
      = weekly_calendar(@space.rical_occurrences(:after => @date, :before => (@date + 7.days)), :date => @date, :include_24_hours => false) do |w|
        = w.week(:business_hours => params[:business_hours], :clickable_hours => true) do |event,truncate|
          =  link_to event.name, event_path(event.id)
    %div.space_calendar_links
      = link_to t('.links.previous_week'), :date => (@date - 7.days).strftime("%d-%m-%Y")
      \|
      = link_to t('.links.current_week'), :date => Date.today
      \|
      = link_to t('.links.next_week'), :date => (@date + 7.days).strftime("%d-%m-%Y")


%p
  = link_to t('.links.edit'), edit_space_path(@space), :class => "ui-corner-all button" if can? :edit, @space
  = link_to t('.links.destroy'), @space, :confirm => t('shared.destroy_confirmation'), :method => :delete, :class => "ui-corner-all button" if can? :destroy, @space
  = link_to t('.links.back'), spaces_path, :class => "ui-corner-all button" if can? :read, Space
