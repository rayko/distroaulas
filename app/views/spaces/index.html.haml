- title "Spaces"

%table.index
  %tr
    %th Name
    %th Short name
    %th Description
    %th Capacity
    %th Spacetype
    %th Actions
  - for space in @spaces
    %tr
      %td= space.name
      %td= space.short_name
      %td= space.description
      %td= space.capacity
      %td= space.space_type.name
      %td
        = link_to 'Show', space if can? :read, space
        = link_to 'Edit', edit_space_path(space) if can? :edit, space
        = link_to 'Destroy', space, :confirm => 'Are you sure?', :method => :delete if can? :destroy, space

= will_paginate @spaces
%p= link_to "New Space", new_space_path, :class => "ui-corner-all button" if can? :create, Space
