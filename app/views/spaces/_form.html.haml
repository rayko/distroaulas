= form_for @space do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :short_name
    %br
    = f.text_field :short_name
  %p
    = f.label :description
    %br
    = f.text_area :description
  %p
    = f.label :capacity
    %br
    = f.text_field :capacity
  %p
    = f.label :spacetype_id
    %br
    = f.text_field :spacetype_id
  %p
    = f.submit
