- title "Equipment"

%p
  %strong Name:
  = @equipment.name
%p
  %strong Description:
  = @equipment.description

%p
  = link_to "Edit", edit_equipment_path(@equipment), :class => "ui-corner-all button" if can? :edit, @equipment
  = link_to "Destroy", @equipment, :confirm => 'Are you sure?', :method => :delete, :class => "ui-corner-all button" if can? :destroy, @equipment
  = link_to "View All", equipment_index_path, :class => "ui-corner-all button" if can? :read, Equipment
