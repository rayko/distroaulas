- title "Calendars"

%table.index
  %tr
    %th Name
    %th Actions
  - for calendar in @calendars
    %tr
      %td= calendar.name
      %td
        = link_to 'Show', calendar
        = link_to 'Edit', edit_calendar_path(calendar)
        = link_to 'Destroy', calendar, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Calendar", new_calendar_path
