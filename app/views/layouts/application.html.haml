!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "print", :media => "print"
    = stylesheet_link_tag "screen"
    = javascript_include_tag "jquery-1.6.2.min", "jquery-ui-1.8.16.custom.min", "jquery.datepick-es", "application", "rails", "jqclock_201", "tag-it", "jquery.qtip-1.0.0-rc3.min", "i18n", "locales"
    = javascript_include_tag "drop_menu.js"

    %script{:type => "text/javascript"}
      I18n.defaultLocale = "#{I18n.default_locale}";
      I18n.locale = "#{I18n.locale}";

    = csrf_meta_tag
    = yield(:head)

  %body

    #container
      #banner
        = render :partial => "application/banner"
      #menu
        = render :partial => "application/menu"
      #content
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}"

        - if show_title?
          %h1= yield(:title)

        = yield

