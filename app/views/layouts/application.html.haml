!!!
%html

  %head
    %title
      = yield(:title) || "Untitled"
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag "screen", "formtastic", "formtastic_changes", "weekly", "drop_menu"
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js"
    = javascript_include_tag "application"
    = javascript_include_tag "rails"
    = javascript_include_tag "drop_menu.js"
    = csrf_meta_tag
    = yield(:head)

  %body

    #container
      #banner
        = render :partial => "application/banner"
      #menu
        = render :partial => "application/menu"

      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"

      - if show_title?
        %h1= yield(:title)

      = yield
