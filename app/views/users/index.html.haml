- title "Users"

%table.index
  %tr
    %th Username
    %th Full Name
    %th e-Mail
    %th Role
    %th Actions
  - for user in @users
    %tr
      %td= user.username
      %td= user.full_name
      %td= user.email
      %td= user.role
      %td
        = link_to 'Show', user if can? :read, user
        = link_to 'Edit', edit_user_path(user) if can? :edit, user
        = link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete if can? :destroy, user
        = link_to 'Reset Pass', user_reset_pass_path(user) if can? :reset_pass, user

= will_paginate @users
%p= link_to "New User", new_user_path, :class => "ui-corner-all button" if can? :create, User