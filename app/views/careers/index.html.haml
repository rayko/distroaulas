- title "Careers"

%table
  %tr
    %th Name
    %th Short name
  - for career in @careers
    %tr
      %td= career.name
      %td= career.short_name
      %td= link_to 'Show', career
      %td= link_to 'Edit', edit_career_path(career)
      %td= link_to 'Destroy', career, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Career", new_career_path
