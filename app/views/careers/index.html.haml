- title "Careers"

%table.index
  %tr
    %th Name
    %th Short name
    %th Plan
    %th Actions
  - for career in @careers
    %tr
      %td= career.name
      %td= career.short_name
      %td= career.plan.name
      %td
        = link_to 'Show', career if can? :read, career
        = link_to 'Edit', edit_career_path(career) if can? :edit, career
        = link_to 'Destroy', career, :confirm => 'Are you sure?', :method => :delete if can? :destroy, career

%p= link_to "New Career", new_career_path, :class => "button ui-corner-all" if can? :create, Career
